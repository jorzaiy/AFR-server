# 服务器配置
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# 数据库配置
MONGODB_URI=mongodb://localhost:27017/forum-analyzer
REDIS_URL=redis://localhost:6379

# JWT 配置
JWT_SECRET=your-super-secret-jwt-key-here-change-this-in-production
JWT_EXPIRES_IN=7d

# API 配置
API_RATE_LIMIT=100
API_TIMEOUT=10000

# 推荐引擎配置
RECOMMENDATION_CACHE_TTL=3600
MAX_RECOMMENDATIONS=50

# 日志配置
LOG_LEVEL=info
LOG_FILE=logs/app.log

# 安全配置
CORS_ORIGINS=http://localhost:3000,https://your-domain.com
HELMET_ENABLED=true

# 监控配置
ENABLE_METRICS=true
METRICS_PORT=9090

# 邮件配置（可选）
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# 文件上传配置
MAX_FILE_SIZE=10MB
UPLOAD_PATH=uploads/

# 缓存配置
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# 推荐算法配置
ALGORITHM_WEIGHTS_CONTENT=0.4
ALGORITHM_WEIGHTS_BEHAVIOR=0.3
ALGORITHM_WEIGHTS_FRESHNESS=0.2
ALGORITHM_WEIGHTS_POPULARITY=0.1

# 数据清理配置
CLEANUP_OLD_EVENTS_DAYS=90
CLEANUP_OLD_THREADS_DAYS=365
CLEANUP_SCHEDULE=0 2 * * *

# 性能配置
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30000
BATCH_SIZE=1000

# 调试配置
DEBUG=false
VERBOSE_LOGGING=false
ENABLE_PROFILING=false
